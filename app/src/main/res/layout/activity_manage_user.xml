<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ManageUserActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage User"
        android:textSize="20dp"
        android:textColor="@color/titleColor"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Team"
        android:gravity="center"
        android:onClick="clickToCreateTeamPage" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New User"
        android:gravity="center"
        android:onClick="clickToCreateUserPage" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find User by Scan QR Code"
        android:gravity="center"
        android:onClick="clickToFindUser" />
</LinearLayout>